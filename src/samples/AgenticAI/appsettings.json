{
  "TokenValidation": {
    "Enabled": false,
    "Audiences": [
      "{{BotClientId}}",
      "{{BlueprintClientId}}"
    ],
    "TenantId": "{{TenantId}}"
  },

  "AgentApplication": {
    "StartTypingTimer": true,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false,
    "UserAuthorization": {
      "AutoSignin": false,
      "Handlers": {
        "agentic": {
          "Type": "AgenticUserAuthorization",
          "Settings": {
            "Scopes": [
              "https://graph.microsoft.com/.default"
            ]
          }
        },
        "me": {
          "Type": "AzureBotUserAuthorization",
          "Settings": {
            "AzureBotOAuthConnectionName": "agentic",
            "OBOConnectionName": "BotConnection",
            "EnableSso": false
          }
        },
        "bot": {
          "Type": "AzureBotUserAuthorization",
          "Settings": {
            "AzureBotOAuthConnectionName": "sso"
          }
        }
      }
    }
  },

  "Connections": {
    "BlueprintConnection": {
      "Settings": {
        "AuthType": "ClientSecret",
        "AuthorityEndpoint": "https://login.microsoftonline.com/{{TenantId}}",
        "ClientId": "{{BlueprintClientId}}",
        "ClientSecret": null,
        "Scopes": [
          "5a807f24-c9de-44ee-a3a7-329e88a00ffc/.default"
        ]
      }
    },
    "BotConnection": {
      "Settings": {
        "AuthType": "ClientSecret",
        "AuthorityEndpoint": "https://login.microsoftonline.com/{{TenantId}}",
        "ClientId": "{{BotClientId}}",
        "ClientSecret": null,
        "Scopes": [
          "https://api.botframework.com/.default"
        ]
      }
    }
  },
  "ConnectionsMap": [
    {
      "Audience": "{{BotClientId}}",
      "Connection": "BotConnection"
    },
    {
      "ServiceUrl": "*",
      "Connection": "BlueprintConnection"
    }
  ],

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.Agents": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
